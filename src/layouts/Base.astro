---
import "../global.css";

export type Props = {
  index: number;
  title: string;
};

const { title, index } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{`${index}. ${title}`} | gen art</title>
  </head>
  <body>
    <slot />
  </body>

  <style>
    body {
      padding: 0;
      margin: 0;
    }
  </style>
</html>
